@model EditProfileVm
@{ 
    ViewData["Title"] = "Edit Profile";
}


<div class="card shadow h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
        <a class="gap-2 btn btn-sm btn-secondary shadow-sm" asp-action="Manage"><i class="fas fa-arrow-left fa-fw fa-sm text-white-50"></i> Back</a>
    </div>

    <div class="card-body">
        <form asp-action="EditProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="FirstName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="LastName">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" class="gap-2 btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>