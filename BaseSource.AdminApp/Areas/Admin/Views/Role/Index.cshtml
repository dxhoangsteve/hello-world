
@model List<RoleVm>

@{
    ViewData["Title"] = "Vai trò";
}

<div class="row">
    
    <div class="col-12  ">
        <div class="card shadow h-100 mb-4 ">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="m-0 font-weight-bold">Vai trò</h3>
                <a href="@Url.Action("Create", "Role")" class="gap-2 btn btn-primary btn-sm">Create</a>
            </div>
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap">
                        <thead>
                            <tr>
                                <th>
                                    Tên
                                </th>
                                <th>
                                    Mô tả
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Description
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Permissions", "Role", new { roleId = item.Id })" class="gap-2 btn btn-sm btn-secondary">Permissions</a>
                                        @if (!RoleConstants.NotAllowedModify.Contains(item.Name))
                                        {
                                            <a href="@Url.Action("Edit", new { id = item.Id })" class="gap-2 btn btn-sm btn-primary">Edit</a>
                                            <button class="gap-2 btn btn-sm btn-danger shadow-sm" data-toggle="btn-confirm" data-title="Delete this row?" data-href="@Url.Action("Delete", new { id = item.Id })" title="Delete"><i class="fas fa-trash-alt fa-fw"></i> Delete</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(".Role-nav").addClass("active");
    </script>
}