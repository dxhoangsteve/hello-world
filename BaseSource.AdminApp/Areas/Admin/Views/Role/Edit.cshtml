@model EditRoleVm

@{
    ViewData["Title"] = "Sửa vai trò";
}

<div>
    <div class="card shadow h-100">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="m-0 font-weight-bold">@ViewData["Title"]</h3>
            <a class="gap-2 btn btn-sm btn-secondary shadow-sm" asp-action="Index"><i class="fas fa-arrow-left fa-fw fa-sm text-white-50"></i> Back</a>
        </div>

        <div class="card-body ">
            <form asp-action="Edit" data-name="ajaxForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @Html.HiddenFor(x => x.Id)

                <div class="row mb-3">
                    <label asp-for="Name" class="col-form-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control " />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label asp-for="Description" class="col-form-label col-md-2"></label>
                    <div class="col-md-10">
                        <textarea rows="4" asp-for="Description" class="form-control "></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-form-label col-md-2"></label>
                    <div class="col-md-10">
                        <button type="submit" class="gap-2 btn btn-primary">Save change</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(".Role-nav").addClass("active");
    </script>
}