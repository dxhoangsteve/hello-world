@using BaseSource.ViewModels.Shared.Account
@model RegisterRequestVm
@{
    ViewData["Title"] = "ĐĂNG KÝ TÀI KHOẢN";
}

<div class="row justify-content-center align-items-center my-5">
    <div class="col-md-4">
        <h3 class="text-center mb-4">@ViewData["Title"]</h3>
        <form action="/Account/Register" method="post">
            <h4>Điền thông tin để tạo tài khoản mới.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="mb-3">
            <label asp-for="UserName">UserName</label>
            <input type="text" class="form-control" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
            </div>*@
            <div class="mb-3">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password">PassWord</label>
                <input type="password" class="form-control" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1">ConfirmPassWord</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="gap-2 btn btn-primary">Register</button>
        </form>
    </div>
</div>



