@using BaseSource.ViewModels.Shared.Account
@model LoginRequestVm
@{
    ViewData["Title"] = "ĐĂNG NHẬP ADMIN";
}


<div class="row justify-content-center align-items-center my-5">
    <div class="col-md-4 comon-card">
        <h3 class="text-center mb-4">@ViewData["Title"]</h3>

        <form action="/Account/Login?returnUrl=@ViewBag.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" asp-for="UserName" placeholder="">
                <label asp-for="UserName">UserName</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" asp-for="Password" class="form-control" placeholder="">
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="gap-2 btn btn-primary btn-lg w-100">Đăng nhập</button>
            </div>
        </form>

    </div>
</div>
