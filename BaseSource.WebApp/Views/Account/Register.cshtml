@model RegisterRequestVm
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-center align-items-center my-5">
    <div class="col-lg-6 row justify-content-center">
        <div class="card common-card p-sm-3">
            <div class="card-body">
                <h3 class="text-center mb-3">@ViewData["Title"]</h3>

                <form action="/Account/Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @* <div class="form-floating mb-3">
                        <input type="text" class="form-control" asp-for="UserName" placeholder="">
                        <label asp-for="UserName">UserName</label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div> *@

                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" asp-for="Email" placeholder="">
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" asp-for="Password" class="form-control" placeholder="">
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="">
                        <label asp-for="ConfirmPassword">Confirm password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="gap-2 btn btn-primary btn-lg w-100">Đăng ký</button>
                    </div>

                    <div class="mb-3">
                        <p>
                            Đã có tài khoản? <a href="/Account/Login">Đăng nhập</a>
                        </p>
                    </div>
                    @* <div class="mb-3">
                        <a href="/facebook-login?returnUrl=@ViewBag.ReturnUrl" class="btn btn-primary">Facebook</a>
                        <a href="/google-login?returnUrl=@ViewBag.ReturnUrl" class="btn btn-danger">Google</a>
                    </div> *@
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {

}