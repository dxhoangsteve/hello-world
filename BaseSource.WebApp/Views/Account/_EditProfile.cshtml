@model EditProfileVm

<form asp-action="EditProfile" method="post" data-name="ajaxForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label mb-2 font-heading">Tên đăng nhập</label>
        <div class="">
            <input type="text" class="common-input common-input--bg border text-muted" value="@Model.Username" readonly>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label mb-2 font-heading">Email</label>
        <div class="">
            <input type="text" class="common-input common-input--bg border text-muted" value="@Model.Email" readonly>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label mb-2 font-heading">Họ Tên</label>
        <div class="">
            <input type="text" class="common-input border" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label mb-2 font-heading">Số điện thoại</label>
        <div class="">
            <input type="text" class="common-input border" asp-for="Phone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-main pill w-100">Lưu thay đổi</button>
    </div>
</form>