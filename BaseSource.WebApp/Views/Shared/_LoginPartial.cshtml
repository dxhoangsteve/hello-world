@if (User.Identity.IsAuthenticated)
{
    @await Component.InvokeAsync("UserInfoSideBar")
}
else
{
    <a href="@Url.Action("login", "account", new { ReturnUrl = Context.Request.Path + Context.Request.QueryString })" class="btn btn-primary">
        <i class="far fa-user me-1"></i>
        Đăng Nhập
    </a>
    <a href="@Url.Action("register", "account")" class="btn btn-secondary">
        Đăng Ký
    </a>
}